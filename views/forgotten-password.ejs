<%- include("_header.ejs", {title: title}) %>
    <body>
        <div class="container">
            <div class="main">
                <form class="auth-form" action="/forgotten-password" method="post">
                    <h2>Forgotten password</h2>
                    <p>
                        Please enter your email adress below and we will send you a
                        link to reset your password.
                    </p>

                    <div class="auth-form-row">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" required />
                    </div>

                    <div class="auth-form-row">
                        <button type="submit">
                            <i class="fa-solid fa-arrow-rotate-left fa-sm fa-fw"></i> Reset password
                        </button>
                    </div>

                    <div class="auth-form-row">
                        Not a member? <a href="/sign-up">Sign up</a>
                    </div>
                </form>

                <div class="footer">NODEST &copy; 2022</div>
            </div>
            <div class="aside">
                <div class="logo">NODEST</div>
            </div>
        </div>
    </body>
</html>
